#defining our function
def main():

    #user chooses any single character they want
    user_input = input("Enter a character: ")

    #If they don't put exactly one, they will be stuck in the while loop
    while len(user_input) != 1:
        print ("Please enter exactly one character: ")
        user_input = input("Enter a character: ")

    #calculating and displaying the ASCII value of users choice
    ascii_value = ord(user_input)
    print(f"The ASCII value of {user_input} is {ascii_value}")
    
#Calling the function
main()
